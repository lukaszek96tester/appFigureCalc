<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">

    <de.codecrafters.tableview.SortableTableView xmlns:table="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tableView"
        android:layout_width="wrap_content"
        android:layout_height="496dp"
        table:tableView_columnCount="4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:id="@+id/AD_textView_label_liczbaFigur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Number of figures"
        app:layout_constraintBottom_toTopOf="@+id/tableView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <TextView
        android:id="@+id/AD_textView_liczbaFigur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="Number"
        app:layout_constraintStart_toEndOf="@+id/AD_textView_label_liczbaFigur"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AD_textView_label_Sumarized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Sumarized"
        app:layout_constraintBottom_toTopOf="@+id/tableView"
        app:layout_constraintEnd_toStartOf="@+id/AD_textView_Area"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AD_textView_label_liczbaFigur"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/AD_textView_Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Area"
        app:layout_constraintBottom_toTopOf="@+id/tableView"
        app:layout_constraintTop_toBottomOf="@+id/AD_textView_liczbaFigur"
        app:layout_constraintVertical_bias="0.571"
        tools:layout_editor_absoluteX="161dp" />

    <TextView
        android:id="@+id/AD_textView_Perimeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="12dp"
        android:text="Perimeter"
        app:layout_constraintBottom_toTopOf="@+id/tableView"
        app:layout_constraintStart_toEndOf="@+id/AD_textView_Area"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

</android.support.constraint.ConstraintLayout>